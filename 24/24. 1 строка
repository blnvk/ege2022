with open ('k8-10.txt') as f:
    s = f.readline()
    k, kmax = 1, 1
    for i in range(1, len(s) - 1):
        if s[i] != s[i + 1]:
            k += 1
            if k> kmax:
                kmax = k
        else:
            k = 1
print(kmax)


with open ('k8.txt') as f:
    s = f.readline()
    k, kmax = 1, 1
    c = []
    for i in range(len(s) - 1):
        if s[i] == s[i + 1]:
            k += 1
            if k == kmax:
                c.append(s[i])
            elif k > kmax:
                kmax = k
                c = [s[i]]
        else:
            k = 1
print(kmax, c)
