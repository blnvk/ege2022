with open('3/27-2a.txt') as f:
    n = int(f.readline())
    summa = 0
    d1 = []
    d2 = []
    for i in range(n):
        a, b = map(int, f.readline().split()) #мэп делаю все целочисленным, сплит разрезает строку по пробелу
        summa += max(a, b)
        d = abs(a - b)
        if d % 3 == 1:
            d1.append(d)
        if d % 3 == 2:
            d2.append(d)
            #ручками проверить какой остаток получается в конкретной нашей 
            #сумме, затем из списка с такими остатками забрать минимальную разницу
    print(summa - min(d1))
