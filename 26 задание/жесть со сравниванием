with open('26-50.txt') as f:
    g = int(f.readline())
    s = [int(i) for i in f]
    s.sort()
    numbers = []
    for i in range(g - 1):
        for j in range(i + 1, g):
            if (s[i] + s[j]) % 2 == 0:
                numbers.append((s[i] + s[j])//2)
    numbers.sort()
    ans = [x for x in numbers if s[g // 2 - 1] < x < s[3 * g // 4]]
print(len(ans), ans[0])
